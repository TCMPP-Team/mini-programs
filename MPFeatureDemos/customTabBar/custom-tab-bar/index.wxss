.tab-bar {
  /* position:fixed; */
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgb(228, 141, 2);
  display: flex;
}

.tab-bar-border {
  background-color: red;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.bar-select {
  background-color: rgb(229, 0, 221);
}

.tab-bar-item image {
  width: 33px;
  height: 33px;
}

.tab-bar-item view {
  font-size: 10px;
}