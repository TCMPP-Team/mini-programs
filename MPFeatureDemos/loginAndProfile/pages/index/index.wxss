/* pages/minePage/minePage.wxss */

Page {
     width: 100%;
     min-height: 100vh;
     background: #f2f2f2;
     display: flex;
     flex-direction: column;
}

.loginHeader {
     width: 100%;
     box-sizing: border-box;
     padding: 16rpx 30rpx;
     display: flex;
     flex-direction: row;
     align-items: center;
     background: white;
}

.headerButton {
     padding: 15rpx;
     width: 56px !important;
     height: 56px !important;
     border-radius: 8px;
}

.userHead {
     width: 100%;
     height: 100%;
     pointer-events: none;
}

.userTitle {
     flex: 1;
     margin-left: 25rpx;
     font-size: 35rpx;
     color: #333;
}

.settingItem {
     display: flex;
     width: 100%;
     box-sizing: border-box;
     flex-direction: row;
     background: white;
     border-bottom: #dedede solid 1px;
     padding: 26rpx;
     align-items: center;
}

.loginHeader .button {
     font-size: 30rpx;
}

.settingItem .caption, .settingItem .value, .settingItem .button {
     font-size: 30rpx;
     color: #333;
}

.settingItem .value, .settingItem .button-view {
     flex: 1;
     text-align: right;
}