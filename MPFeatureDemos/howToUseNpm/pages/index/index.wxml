<view class="container">
    <block wx:if="{{npmInit}}">
        <view class="title">AES-GCM demo</view>
        <view class="sub-title"><text>1.plaintext</text></view>
        <view class="sub-title-value"><text>{{plaintext}}</text></view>
        <view class="sub-title"><text>2.iv</text></view>
        <view class="sub-title-value"><text>{{iv}}</text></view>
        <view class="sub-title"><text>3.secret</text></view>
        <view class="sub-title-value"><text>{{secret}}</text></view>
        <view class="sub-title"><text>4.decryptedText</text></view>
        <view class="sub-title-value"><text>{{decryptedText}}</text></view>
